{
  "name": "bolivian-cacho-game",
  "description": "React project for practicing the Bolivian dice game Cacho",
  "version": "1.0.1",
  "author": "Jhordy Gavinchu <dev@jhordyess.com>",
  "license": "MIT",
  "private": true,
  "keywords": [
    "React",
    "Bolivia",
    "Dice-game",
    "Cacho"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env",
      [
        "@babel/preset-react",
        {
          "runtime": "automatic"
        }
      ]
    ]
  },
  "scripts": {
    "dev": "webpack serve --config webpack.config.dev.cjs",
    "build": "yarn lint && webpack --config webpack.config.prod.cjs",
    "start": "yarn build && serve -s dist -l 3000",
    "lint": "eslint .",
    "format": "prettier --write .",
    "deploy": "gh-pages -d dist",
    "postinstall": "husky"
  },
  "packageManager": "yarn@4.5.3",
  "dependencies": {
    "@xstate/react": "^4.1.3",
    "lodash": "^4.17.21",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "xstate": "^5.19.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.26.3",
    "@eslint/js": "^9.16.0",
    "autoprefixer": "^10.4.20",
    "babel-loader": "^9.2.1",
    "clean-webpack-plugin": "^4.0.0",
    "cname-webpack-plugin": "^3.0.0",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.0",
    "eslint": "^9.16.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "gh-pages": "^6.2.0",
    "globals": "^15.13.0",
    "html-webpack-plugin": "^5.6.3",
    "husky": "^9.1.7",
    "mini-css-extract-plugin": "^2.9.2",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "serve": "^14.2.4",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.16",
    "terser-webpack-plugin": "^5.3.10",
    "webpack": "^5.97.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0"
  }
}
